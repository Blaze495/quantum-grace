// Prisma schema for Quantum Grace

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// AUTH & USER MODELS (NextAuth.js compatible)
// ============================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  timezone      String    @default("UTC")
  isPublic      Boolean   @default(false)
  role          UserRole  @default(USER)
  xp            Int       @default(0)
  level         Int       @default(1)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  accounts       Account[]
  sessions       Session[]
  habits         Habit[]
  sessionLogs    SessionLog[]
  goals          Goal[]
  reflections    Reflection[]
  pomodoroSessions PomodoroSession[]
  userBadges     UserBadge[]
  streakSnapshots StreakSnapshot[]
  notifications  Notification[]
  publicProfile  PublicProfile?
  auditLogs      AuditLog[]

  @@index([email])
  @@map("users")
}

enum UserRole {
  USER
  ADMIN
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ============================================
// TRACKING & PRODUCTIVITY MODELS
// ============================================

model Habit {
  id           String   @id @default(cuid())
  userId       String
  title        String
  description  String?
  schedule     Json     // { frequency: 'daily' | 'weekly' | 'custom', days: [], target: number }
  reminderTime String?
  color        String   @default("#6366f1")
  icon         String?
  archived     Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  sessionLogs SessionLog[]

  @@index([userId, createdAt])
  @@index([userId, archived])
  @@map("habits")
}

model SessionLog {
  id        String   @id @default(cuid())
  userId    String
  habitId   String?
  category  String
  minutes   Int
  startedAt DateTime
  endedAt   DateTime
  note      String?
  tags      String[] @default([])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user  User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  habit Habit? @relation(fields: [habitId], references: [id], onDelete: SetNull)

  @@index([userId, startedAt])
  @@index([userId, category])
  @@index([habitId])
  @@map("session_logs")
}

model Goal {
  id            String     @id @default(cuid())
  userId        String
  title         String
  description   String?
  targetType    TargetType
  targetValue   Float
  progressValue Float      @default(0)
  deadline      DateTime?
  status        GoalStatus @default(IN_PROGRESS)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, status])
  @@index([userId, deadline])
  @@map("goals")
}

enum TargetType {
  TIME
  COUNT
  CUSTOM
}

enum GoalStatus {
  IN_PROGRESS
  COMPLETED
  ABANDONED
}

model Reflection {
  id        String   @id @default(cuid())
  userId    String
  date      DateTime
  text      String
  mood      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@index([userId, date])
  @@map("reflections")
}

model PomodoroSession {
  id            String   @id @default(cuid())
  userId        String
  cycles        Int
  focusMinutes  Int
  breakMinutes  Int
  completedAt   DateTime @default(now())
  createdAt     DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, completedAt])
  @@map("pomodoro_sessions")
}

// ============================================
// GAMIFICATION MODELS
// ============================================

model Badge {
  id          String   @id @default(cuid())
  key         String   @unique
  name        String
  description String
  icon        String
  requirement Json     // { type: 'streak' | 'xp' | 'custom', value: number }
  createdAt   DateTime @default(now())

  userBadges UserBadge[]

  @@map("badges")
}

model UserBadge {
  id        String   @id @default(cuid())
  userId    String
  badgeId   String
  awardedAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  badge Badge @relation(fields: [badgeId], references: [id], onDelete: Cascade)

  @@unique([userId, badgeId])
  @@index([userId])
  @@map("user_badges")
}

model StreakSnapshot {
  id            String   @id @default(cuid())
  userId        String
  date          DateTime
  globalStreak  Int      @default(0)
  habitStreaks  Json     // { habitId: streakCount }
  createdAt     DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@index([userId, date])
  @@map("streak_snapshots")
}

// ============================================
// SOCIAL & NOTIFICATIONS
// ============================================

model PublicProfile {
  id              String   @id @default(cuid())
  userId          String   @unique
  username        String   @unique
  bio             String?
  visibleSections Json     @default("{\"habits\": false, \"goals\": false, \"streaks\": true}")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([username])
  @@map("public_profiles")
}

model Notification {
  id        String           @id @default(cuid())
  userId    String
  type      NotificationType
  title     String
  message   String
  payload   Json?
  isRead    Boolean          @default(false)
  createdAt DateTime         @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, isRead])
  @@index([userId, createdAt])
  @@map("notifications")
}

enum NotificationType {
  REMINDER
  ACHIEVEMENT
  WEEKLY_REPORT
  SYSTEM
}

// ============================================
// AUDIT & SECURITY
// ============================================

model AuditLog {
  id        String   @id @default(cuid())
  userId    String
  action    String
  meta      Json?
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@map("audit_logs")
}
